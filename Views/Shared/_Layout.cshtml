<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewData["Title"] - 5edmaTrack</title>
  @RenderSection("Styles", required: false)
  <link rel="stylesheet" href="~/css/styles.css">
  <script src="https://kit.fontawesome.com/c6f38472f5.js" crossorigin="anonymous"></script>
</head>

<body>
  <header>
    <nav>
      <div class="container flex">
        <div class="left">
          <h1>5EDMATRACK</h1>
        </div>
        <div class="right">
          @if (ViewData["loggedIn"] is bool loggedIn && loggedIn)
          {
            if (ViewData["noLinks"] is bool noLinks && !noLinks)
            {
              int selected = ViewData["selected"] as int? ?? 0;

              <a href="/" class='@(selected == 1 ? "selected" : "")'>Home</a>
              <a href="/Tasks" class='@(selected == 2 ? "selected" : "")'>Tasks</a>
              <a href="/Movies" class='@(selected == 3 ? "selected" : "")'>Movies</a>
              <a href="/Account" class='@(selected == 4 ? "selected" : "")'>Account</a>
            }
            <a href="/User/Logout" class="danger">Logout</a>
          }
        </div>
      </div>
    </nav>
  </header>
  <main>
    @RenderBody()
  </main>

  @RenderSection("Scripts", required: false)
</body>


</html>
