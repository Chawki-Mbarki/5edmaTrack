<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - 5edmaTrack</title>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/css/styles.css">
    <script src="https://kit.fontawesome.com/c6f38472f5.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <nav>
            <div class="container flex">
                <div class="left">
                    <h1>5EDMATRACK</h1>
                </div>
                @if(ViewData["loggedIn"] is bool loggedIn && loggedIn){
                <div class="right">
                    <a href="/" class="selected">Home</a> |
                    <a href="/Tasks">Tasks</a> |
                    <a href="/Movies">Movies</a> |
                    <a href="/Account">Account</a>
                    <a href="/Account/Logout" class="danger">Logout</a>
                </div>
                }
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>

    <script src="~/js/script.js"></script>
</body>

</html>
