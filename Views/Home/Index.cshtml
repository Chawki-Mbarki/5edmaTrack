@{
  ViewData["Title"] = "Home Page";
  ViewData["loggedIn"] = false;
   var registerFailed = ViewData["RegisterFailed"] is bool && (bool)ViewData["RegisterFailed"];
   var loginFailed = ViewData["LoginFailed"] is bool && (bool)ViewData["LoginFailed"];
}

@model khedmatrack.Models.SignViewModel

@section Styles {
  <link rel="stylesheet" href="~/css/home.css" />
}

<div class="content">
  <img src="~/images/Home-Shapes-1.svg" alt="shape" class="shape1">
  <div class="container content-wrapper flex column">
    <h2 class="display-4">5edmaTrack</h2>
    <div class="flex">
      <p class="reversed-colors">Effortlessly track your tasks and progress with 5edmaTrack and why not watch some
        Movies In your free time</p>
      <p>😉</p>
    </div>
    <button class="primary login-btn">- Login -</button>
    <div class="link-wrapper flex" data-text="New to 5edmaTrack?">
      <p class="reversed-colors">New to 5edmaTrack ?</p>
      <a class="orange sign-up-link">Create an account</a>
    </div>
    <div class="shapes">
      <img src="~/images/Home-Shapes-2.svg" alt="shape" class="shape shape2">
    </div>
  </div>
</div>

<div class="veil @(registerFailed || loginFailed ? "visible" : "hide")"></div>

<div class="form-box login-form-box flex  @(loginFailed ? "visible" : "hide")">
  <i class="fa-solid fa-xmark"></i>
  <form asp-action="Login" asp-controller="User" method="POST" class="flex column">
    <div class="inputs-boxes-container flex column">
      <div class="input-box flex">
        <label for="email">Email</label>
        <input type="email" asp-for="LoginModel.LoginEmail" placeholder="Enter your email" required>
        <span class="error" asp-validation-for="LoginModel.LoginEmail"></span>
      </div>
      <div class="input-box flex">
        <label for="password">Password</label>
        <input type="password" asp-for="LoginModel.LoginPassword" placeholder="Enter your password" required>
        <span class="error" asp-validation-for="LoginModel.LoginPassword"></span>
      </div>
      <div class="flex remember-me">
        <input type="checkbox" id="rememberMe" name="rememberMe">
        <label  for="rememberMe">Remember Me</label>
      </div>
    </div>
    <button type="submit" class="secondary">- Login -</button>
    <a class="orange sign-up-link">Sign Up</a>
  </form>
</div>

<div class="register-form-box form-box @(registerFailed ? "visible" : "hide")">
  <i class="fa-solid fa-xmark"></i>
  <form asp-action="Register" asp-controller="User" method="POST" class="flex column">
    <div class="inputs-boxes-container flex">
      <div class="left flex column">
        <div class="input-box flex">
          <label asp-for="RegisterModel.FirstName">First Name</label>
          <input type="text" asp-for="RegisterModel.FirstName" placeholder="Enter your First Name" required>
        </div>
        <div class="input-box flex">
          <label asp-for="RegisterModel.LastName">Last Name</label>
          <input type="text" asp-for="RegisterModel.LastName" placeholder="Enter your Last Name" required>
        </div>
        <div class="input-box flex">
          <button type="submit" class="secondary">- Sign Up -</button>
        </div>
        <div class="input-box log-in-link-container flex">
          <a class="orange log-in-link">Login</a>
        </div>
      </div>
      <div class="right flex column">
        <div class="input-box flex">
          <label asp-for="RegisterModel.Email">Email</label>
          <input type="email" asp-for="RegisterModel.Email" placeholder="Enter your email" required>
        </div>
        <div class="input-box flex">
          <label asp-for="RegisterModel.Password">Password</label>
          <input type="password" asp-for="RegisterModel.Password" placeholder="Enter your password" required>
        </div>
        <div class="input-box flex">
          <label asp-for="RegisterModel.PasswordConfirm">Confirm Password</label>
          <input type="password" asp-for="RegisterModel.PasswordConfirm" placeholder="Confirm your password" required>
        </div>
        <ul class="input-box errors flex column">
          <li class="error"><span asp-validation-for="RegisterModel.FirstName"></span></li>
          <li class="error"><span asp-validation-for="RegisterModel.LastName"></span></li>
          <li class="error"><span asp-validation-for="RegisterModel.Email"></span></li>
          <li class="error"><span asp-validation-for="RegisterModel.Password"></span></li>
          <li class="error"><span asp-validation-for="RegisterModel.PasswordConfirm"></span></li>
        </ul>
      </div>
    </div>
    
  </form>
</div>
